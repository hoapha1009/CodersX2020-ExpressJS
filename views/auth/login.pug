extends ../layouts/common
block content
  h1 Login
  
  if errors 
    each error in errors
      .alert.alert-danger= error
  
  form.form(action="", method="post")
    .form-group.row
      label.col-sm-2.col-form-label(for="email") Email:
      .col-sm-10
        input#email.form-control(type="text", name="email", required, value= values ? values.email : '')
      label.col-sm-2.col-form-label(for="password") Password:
      .col-sm-10
        input#password.form-control(type="password", name="password", required, value= values ? values.password : '')
        button.btn.btn-primary Login
