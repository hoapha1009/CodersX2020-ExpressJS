extends ../layouts/common
block content
  a(href='/users/' + user.id + '/profile') Back
  h3.pb-3 Avatar
  .d-flex.justify-content-center.pb-3
    img.rounded-circle(src=avatar, width ='250px')
  form(action='/users/update-avatar', enctype="multipart/form-data", method='POST')
    input.form-control(type="text", name="id", value=user.id, hidden)
    .form-group.row
      label.col-sm-3.col-form-label Change Avatar:
      .col-sm-6.pb-sm-3
        input#myFile(type='file', name='avatar')
    button.btn.btn-primary.px-5 Update
