extends ../layouts/common
block content
  h3.d-flex.justify-content-between 
    span Create a new User
    span
        a(href='/users') Back

  if errors
    each error in errors
      .alert.alert-danger= error
  form(action='/users/create', method='POST', enctype="multipart/form-data")
    .form-group.row
      label.col-sm-2.col-form-label(for="email") Email
        span(style='color:red')  *
      .col-sm-10
        input#email.form-control(type='email', name='email',value = values ? values.email : "",required)
    .form-group.row
      label.col-sm-2.col-form-label(for="name") User Name
        span(style='color:red')  *
      .col-sm-10
        input#name.form-control(type='text', name='name',value = values ? values.name : "",required)
    .form-group.row
      label.col-sm-2.col-form-label(for="password") Password
        span(style='color:red')  *
      .col-sm-10
        input#password.form-control(type='password', name='password',value = values ? values.password : "",required)
    .form-group.row
      label.col-sm-2.col-form-label(for="avatar") Avatar
        span(style='color:red')  *
      .col-sm-10
        input#avatar.form-control-file(type='file', name='avatar')
    button.btn.btn-primary Create 
  a(href='/users') Back