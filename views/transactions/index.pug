h1 Transactions management

div(style="color: blue")
    h2 Transactions list
  
table(style="width: 400px; text-align: left")
  tr
    th Transaction ID
    th User ID
    th Book ID
    th Delete
  each trans in transactions
    tr
      td= trans.trans_id
      td= trans.user_id
      td= trans.book_id
      td 
        a(href="/transactions/" + trans.trans_id + "/delete") Click
        
a(href="./transactions/create", style="color: green") 
    h3 Add new transaction
      
    